{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "start": "export NODE_ENV='development && ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "npm run start:watch",
    "start:watch": "nodemon",
    "start:debug": "nest start --debug --watch",
    "start:prod": "export NODE_ENV='production'&& ts-node -r tsconfig-paths/register src/main.ts",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./e2e/jest-e2e.json",
    "grpc:gen": "./node_modules/.bin/rxjs-grpc -o src/grpc/generated.ts src/grpc/protobufs/*.proto"
  },
  "dependencies": {
    "@grpc/proto-loader": "^0.5.4",
    "@nestjs/common": "7.0.9",
    "@nestjs/config": "^0.4.2",
    "@nestjs/core": "7.0.9",
    "@nestjs/microservices": "^7.0.11",
    "@nestjs/platform-express": "^7.0.11",
    "@nestjs/typeorm": "^7.0.0",
    "alipay-sdk": "^3.0.8",
    "class-transformer": "0.2.3",
    "class-validator": "0.12.2",
    "grpc": "^1.24.2",
    "mysql2": "^2.1.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.3",
    "typeorm": "^0.2.24",
    "uuid": "^8.0.0",
    "ts-node": "8.5.4",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.6.5"
  },
  "devDependencies": {
    "@nestjs/cli": "6.12.9",
    "@nestjs/schematics": "6.7.6",
    "@nestjs/testing": "6.10.12",
    "@types/express": "4.17.2",
    "@types/jest": "24.0.25",
    "@types/supertest": "2.0.8",
    "@types/uuid": "^7.0.3",
    "jest": "24.9.0",
    "prettier": "1.19.1",
    "rimraf": "2.7.1",
    "rxjs-grpc": "1.0.0-rxjs6.0",
    "supertest": "4.0.2",
    "ts-jest": "24.2.0",
    "ts-loader": "6.2.1",
    "tslint": "5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
