{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "charset": "utf8",
    "sourceMap": false,
    "baseUrl": "./",
    "allowJs": false,
    "incremental": false,
    "skipLibCheck": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*", "src/config"],
  "exclude": ["node_modules", "dist"]
}
